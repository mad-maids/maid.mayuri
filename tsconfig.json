{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "target": "ES5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "include": ["src/**/*"]
}
